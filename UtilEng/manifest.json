{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "UtilEng (Beta)",
  "description": "UtilEng provides a side panel that features a scientific calculator and an infinite canvas for drawing diagrams or making notes",
  "version": "0.1",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_title": "Click to open panel"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "background.js",
    "{{firefox}}.scripts": ["background.js"]
  },
  "permissions": [
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "sandbox": {
    "pages":["calc.html"]
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-modals; worker-src 'self' 'unsafe-inline' 'unsafe-eval' blob:; child-src 'self' 'unsafe-inline' 'unsafe-eval' blob:"
  }
}
